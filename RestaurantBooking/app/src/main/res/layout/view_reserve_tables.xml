<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view1="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        style="@style/CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view1:cardCornerRadius="4dp"
        android:layout_gravity="center"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtReserveTableNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="125dp"
                android:layout_marginTop="16dp"
                android:text="Table Number"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtReserveCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:text="Customer Name"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/txtReserveCheckInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtReserveCustomerName"
                android:text="Check Time"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnReserveCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/btn_checkout" />

            <TextView
                android:id="@+id/txtReserveTableStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="109dp"
                android:text="Status"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/txtReservePhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txtTableNumber"
                android:text="PhoneNumber"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>