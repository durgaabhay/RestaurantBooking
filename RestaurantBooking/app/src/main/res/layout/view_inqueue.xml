<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView xmlns:card_view2="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view2:cardCornerRadius="4dp"
        android:layout_margin = "5dp">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtQueueNoOfSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="125dp"
            android:layout_marginTop="16dp"
            android:text="Number of Seats"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/txtQueueCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="49dp"
            android:text="Customer Name"
            android:textColor="@color/colorPrimaryDark"/>

        <Button
            android:id="@+id/btnQueueAssign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/btn_assign" />

        <TextView
            android:id="@+id/txtQueueTableStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtQueueNoOfSeats"
            android:layout_marginStart="154dp"
            android:text="Status"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/txtQueuePhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/txtQueueNoOfSeats"
            android:text="PhoneNumber"
            android:textColor="@color/colorPrimary" />


    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>