<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_margin = "5dp">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTableNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="125dp"
                android:layout_marginTop="16dp"
                android:text="Table Number"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtDispCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="49dp"
                android:text="Customer Name"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtCheckInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtDispCustomerName"
                android:text="Check Time"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btnCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/btn_checkout" />

            <TextView
                android:id="@+id/txtTableStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="132dp"
                android:text="Status"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/txtDispPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/txtTableNumber"
                android:textColor="@color/colorPrimary"
                android:text="PhoneNumber" />

            <TextView
                android:id="@+id/txtDispNoOfSeats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtTableNumber"
                android:layout_alignTop="@+id/txtDispCustomerName"
                android:text="No Of Seats" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
